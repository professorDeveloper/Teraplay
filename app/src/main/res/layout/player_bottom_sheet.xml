<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/_52sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@color/card_background" />


        <TextView
            android:id="@+id/bottomSheerCustomTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/warning_update"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bottomSheerCustomDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/inter_bold"
            android:lineSpacingExtra="4dp"
            android:text="Will Be ADS ))"
            android:textAlignment="center"
            android:textColor="@color/hint_text"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/player1Bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_54sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/unselected_player_bg"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/playerIcon"
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_52sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4sdp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/app_logo_no_anim" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/playerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/inter_bold"
                        android:text="TeraPlay"
                        android:textSize="@dimen/_10ssp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:background="@drawable/recommended_bg">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:layout_marginVertical="@dimen/_3sdp"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="center"
                            android:text="Recommended"
                            android:textAllCaps="true"
                            android:textColor="@color/on_primary"
                            android:textSize="@dimen/_7ssp"
                            tools:ignore="DuplicateIds" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free"
                        android:textAllCaps="true"
                        android:textColor="@color/hint_text"
                        android:textSize="@dimen/_9ssp" />

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        style="@style/Widget.CustomSmallRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="@dimen/_4sdp"
                        android:numStars="5"
                        android:stepSize="0.5"
                        app:mrb_fillBackgroundStars="true"
                        app:mrb_progressBackgroundTint="@color/primary"
                        app:mrb_progressTint="@color/primary" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/player1Radio"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/_8sdp" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player2Bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_54sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/unselected_player_bg"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/player2Icon"
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_52sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4sdp"
                android:padding="@dimen/_8sdp"
                app:srcCompat="@drawable/img_2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player2Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/inter_bold"
                        android:text="SPlay"
                        android:textSize="@dimen/_10ssp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:background="@drawable/recommended_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:layout_marginVertical="@dimen/_3sdp"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="center"
                            android:text="SOon"
                            android:textAllCaps="true"
                            android:textColor="@color/on_primary"
                            android:textSize="@dimen/_7ssp"
                            tools:ignore="DuplicateIds" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="External Player"
                        android:textAllCaps="true"
                        android:textColor="@color/hint_text"
                        android:textSize="@dimen/_9ssp" />

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        style="@style/Widget.CustomSmallRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:numStars="4"
                        android:stepSize="0.5"
                        app:mrb_fillBackgroundStars="true"
                        app:mrb_progressBackgroundTint="@color/primary"
                        app:mrb_progressTint="@color/primary" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/player2Radio"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:checked="false"
                    android:clickable="false"
                    android:enabled="false" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player3Bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_54sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/unselected_player_bg"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/player3Icon"
                android:layout_width="@dimen/_52sdp"
                android:layout_height="@dimen/_52sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4sdp"
                android:padding="@dimen/_8sdp"
                app:srcCompat="@drawable/img_1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player3Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/inter_bold"
                        android:text="Mx Player"
                        android:textSize="@dimen/_10ssp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:background="@drawable/recommended_bg">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:layout_marginVertical="@dimen/_3sdp"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="center"
                            android:text="SOon"
                            android:textAllCaps="true"
                            android:textColor="@color/on_primary"
                            android:textSize="@dimen/_7ssp"
                            tools:ignore="DuplicateIds" />
                    </FrameLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="External Player"
                        android:textAllCaps="true"
                        android:textColor="@color/hint_text"
                        android:textSize="@dimen/_9ssp" />

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        style="@style/Widget.CustomSmallRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="@dimen/_4sdp"
                        android:numStars="3"
                        android:stepSize="0.5"
                        app:mrb_fillBackgroundStars="true"
                        app:mrb_progressBackgroundTint="@color/primary"
                        app:mrb_progressTint="@color/primary" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/player3Radio"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:checked="false"
                    android:clickable="false"
                    android:enabled="false" />
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/errorTxt"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/inter_bold"
            android:lineSpacingExtra="4dp"
            android:text="Choose one of the players to watch the video"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="@dimen/_11ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/okBtn"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_bold"
                android:insetTop="0dp"
                android:textColor="@color/on_primary"
                android:insetBottom="0dp"
                android:padding="8dp"
                android:text="Watch"
                android:textSize="16sp"
                app:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="16dp"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>